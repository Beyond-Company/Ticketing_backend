# Application Configuration
NODE_ENV="development"
PORT=5000

# Database Configuration
# For local development (without Docker):
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ticketing_system?schema=public"
# For Docker:
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/ticketing_system?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:5173"

# Email Configuration
# For local development, use Maildev (recommended):
USE_MAILDEV="true"
MAILDEV_HOST="localhost"
MAILDEV_SMTP_PORT="1025"
MAILDEV_WEB_PORT="1080"

# For production, use Postmark:
# Get your API token from https://postmarkapp.com
# POSTMARK_API_TOKEN="your-postmark-api-token-here"
# The verified sender email address in your Postmark account
# POSTMARK_FROM_EMAIL="dev@beyondcompany.sa"

# Legacy email config (kept for backward compatibility)
EMAIL_USER="dev@beyondcompany.sa"

# Redis Configuration
# For local development (without Docker):
REDIS_HOST="localhost"
REDIS_PORT=6379
# For Docker:
# REDIS_HOST="redis"
# REDIS_PORT=6379

# ClamAV Configuration
# For local development (without Docker):
# CLAMAV_HOST="localhost"
# CLAMAV_PORT=3310
# For Docker:
CLAMAV_HOST="clamav"
CLAMAV_PORT=3310
